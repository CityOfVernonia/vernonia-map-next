{
  "license": "MIT",
  "dependencies": {
    "@arcgis/core": "^4.18.1",
    "@babel/polyfill": "^7.12.1",
    "@esri/calcite-components": "^1.0.0-beta.51",
    "bootswatch": "^4.6.0",
    "chart.js": "^2.9.4",
    "cov-arcgis-esm": "^0.0.17",
    "interactjs": "^1.10.10",
    "js-cookie": "^2.2.1",
    "papaparse": "^5.3.0"
  },
  "devDependencies": {
    "@arcgis/webpack-plugin": "^4.18.0",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-decorators": "^7.13.5",
    "@babel/preset-typescript": "^7.13.0",
    "@types/chart.js": "^2.9.31",
    "@types/jest": "^26.0.22",
    "@types/js-cookie": "^2.2.6",
    "@types/papaparse": "^5.2.5",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "babel-loader": "^8.2.2",
    "chalk": "^4.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^8.1.0",
    "css-loader": "^5.2.0",
    "css-minimizer-webpack-plugin": "^1.3.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "file-loader": "^6.2.0",
    "fse": "^4.0.1",
    "html-inline-css-webpack-plugin": "^1.11.0",
    "html-replace-webpack-plugin": "^2.6.0",
    "html-webpack-plugin": "^5.3.1",
    "jest": "^26.6.3",
    "mini-css-extract-plugin": "^1.4.0",
    "node-sass": "^5.0.0",
    "prettier": "^2.2.1",
    "ramda": "^0.27.1",
    "resolve-url-loader": "^3.1.2",
    "sass-loader": "^11.0.1",
    "terser-webpack-plugin": "^5.1.1",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.1.0",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3",
    "webpack": "^5.28.0",
    "webpack-cli": "^4.6.0",
    "webpack-dev-server": "^3.11.2",
    "workbox-webpack-plugin": "^6.1.2",
    "yargs": "^16.2.0"
  },
  "scripts": {
    "build": "webpack --mode production",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "prettier": "prettier --write \"src/**/*.ts?(x)\"",
    "prettier-webpack": "prettier --write webpack.config.js",
    "start": "webpack serve --mode development",
    "test": "npm run prettier && npm run lint && jest --coverage --passWithNoTests && npm run build",
    "widget": "node template/index.js"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-typescript"
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ]
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "ignorePatterns": [
      "webpack.config.js",
      "*.d.ts",
      "template/",
      "dist/"
    ],
    "rules": {
      "@typescript-eslint/no-empty-function": 0,
      "@typescript-eslint/ban-ts-comment": 1,
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_|^h"
        }
      ]
    },
    "extends": [
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120,
    "tabWidth": 2
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  }
}
